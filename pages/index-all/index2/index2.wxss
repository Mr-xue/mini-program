/* components/index2/index2.wxss */
.s3{
  margin-bottom:100rpx;
  padding-bottom:100rpx;
}
.nav{
  display:flex;
  height:72rpx;
  justify-content: space-between;
  align-items: center;
  background-color:#434349;
}
.nav > view{
  position: relative;
  color:#fff;
  flex:1;
  height: 100%;
  line-height: 72rpx;
  font-size: 24rpx;
  text-align: center;
}
.nav > view::before{
  content: '';
  position: absolute;
  right: 0;
  top:10px;
  border-right: 1px solid rgba(255,255,255,.35);
  width: 1px;
  height: 16px;
}
.show{
  background-color: #82c8af;
}
.show .list{
  opacity:1;
  transform:none;
  z-index: 10;
}
.list{
  position: absolute;
  top: 72rpx;
  z-index: -1;
  width: 100%;
  opacity:0;
  transform:translateY(10px);
  transition:.2s all;
  text-align: center;
  background-color:#434349;
}
.list > view{
  position: relative;
  height:70rpx;
  line-height: 70rpx;
}
.list > view::before{
  content:'';
  position: absolute;
  top: 0;
  left: 0;
  height: 1px;
  width:100%;
  background-color: rgba(255,255,255,.35);
}
.f-ele{
  position: fixed;
  right:10px;
  bottom:100px;
  font-size: 11px;
  text-align: center;
  width: 50px;
  height:50px;
  line-height: 50px;
  border-radius: 50%;
  background-color: #434349;
  color:#fff;
}

.long{
  height: 800rpx;
}
.works{
  display:flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding:10rpx 30rpx;
}
.w-li{
  width: 330rpx;
  margin-bottom:20rpx;

}
.w-li > image{
  display: block;
  width: 330rpx;
  height:330rpx;
}
.w-tit{
  padding-top:5px;
  font-size: 28rpx;
  color:#333;
}
.w-time{
  font-size: 24rpx;
  color:#aaa;
}
.work-tit{
  position: relative;
  font-weight: bold;
  color:#333;
  padding-left:60rpx;
  margin-top:40rpx;
}
.work-tit::before{
  content:'';
  position: absolute;
  left: 30rpx;
  top: 12rpx;
  width: 8rpx;
  height: 28rpx;
  background: #82c8af
}